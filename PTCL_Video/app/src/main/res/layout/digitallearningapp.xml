<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_actionBar"
            layout="@layout/app_actionbar" />

        <TextView
            android:id="@+id/DigitalLearningApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_actionBar"
            android:gravity="center_horizontal"
            android:text="@string/health_and_safety_guidelines"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ThirdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DigitalLearningApp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/imgBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:text="Complaints Guidelines"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                app:srcCompat="@mipmap/ic_launcher_round" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FourthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ThirdLayout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/imgBtn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton"
                android:text="Assessment Test"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                app:srcCompat="@mipmap/ic_launcher_round" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
